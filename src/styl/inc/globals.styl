*
	font-family 'Roboto', sans-serif

h1
	font-family 'Roboto Slab', serif
	margin-bottom 2rem
	margin-top 0
	
p
	font-size 1.25rem

input, button
	border 4px solid #c9c9c9
	border-radius 0
	box-sizing border-box
	font-size 1.25rem
	padding 0.5rem
	width 100%
	@media screen and (min-width 1001px)
		width auto

input
	background-color #f0f0f0
	border-radius 0
	outline 0
	&:focus
		background-color #fff
		border-color green

button
	background-color #c9c9c9
	color #fff
	&:hover
		background-color #808080
		border-color #808080
	&:focus
		background-color green
		border 4px solid green
		border-radius 0
		color #fff
		outline 0
	&.button-clear
		&:focus
			background-color red
			border-color red